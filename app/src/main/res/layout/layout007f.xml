<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.inshot.videotomp3.view.ExoTextureView
        android:layout_gravity="center"
        android:id="@id/id04a6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@id/id0492"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/id02d6"
            android:background="@drawable/drawable011f"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:scaleType="center"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/drawable01e8" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/id0312"
            android:background="@drawable/drawable011f"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginRight="24.0dip"
            android:scaleType="center"
            android:layout_toLeftOf="@id/id02d6"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/drawable01f2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@id/id0362"
        android:background="#61000000"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/id02d7"
            android:background="@drawable/drawable007e"
            android:padding="10.0dip"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:tint="#ffffffff"
            app:srcCompat="@drawable/drawable01e8" />

        <TextView
            android:textSize="11.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_vertical"
            android:id="@id/id0450"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginEnd="10.0dip" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_gravity="center_vertical"
            android:id="@id/id02df"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxHeight="4.0dip"
            android:progressDrawable="@drawable/drawable0101"
            android:minHeight="4.0dip"
            android:thumb="@drawable/drawable00f3"
            android:layout_weight="1.0"
            android:paddingStart="8.0dip"
            android:paddingEnd="8.0dip" />

        <TextView
            android:textSize="11.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_vertical"
            android:id="@id/id0424"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16.0dip"
            android:text="00:00" />
    </LinearLayout>
</FrameLayout>